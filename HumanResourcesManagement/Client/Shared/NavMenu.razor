@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private bool isCandidatoClicked = false;
    private bool subCandidatoVisible = false;
    private bool isContrattoClicked = false;
    private bool subContrattoVisible = false;

    private void ToggleCandidatoMenu()
    {

        isCandidatoClicked = !isCandidatoClicked;
        subCandidatoVisible = isCandidatoClicked;

    }

    private void ToggleContrattoMenu()
    {
        isContrattoClicked = !isContrattoClicked;
        subContrattoVisible = isContrattoClicked;

    }
    private bool isNavMenuOpen = false;

    private string NavMenuCssClassDrop => isNavMenuOpen ? "full-width-menu" : "";

    private void ToggleNavMenuDrop()
    {
        isNavMenuOpen = !isNavMenuOpen;
    }
}
