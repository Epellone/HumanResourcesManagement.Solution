<h3>Anagrafica Sedi</h3>
@page "/AnagraficaSedi"
@using HumanResourcesManagement
@using HumanResourcesManagementAPI.Models
@using System.Net.Http.Json
@inject HttpClient HttpClient

<!DOCTYPE html>
<html>
<head>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .button-container {
            text-align: right;
        }

        .message {
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="button-container">
        <button type="button" @onclick="AttivaAggiungiSede">Aggiungi sede</button>
    </div>
    @if (aggiungiSedeAttivo)
    {
        <form @onsubmit="AggiungiSede">
            <label for="sede">Sede</label>
            <input type="text" id="sede" @bind="nuovaSede.Descrizione" />

            <label for="indirizzo">Indirizzo</label>
            <input type="text" id="indirizzo" @bind="nuovaSede.Indirizzo" />

            <label for="recapitoTel">Recapito telefonico</label>
            <input type="text" id="recapitoTel" @bind="nuovaSede.RecapitoTel" />

            <label for="emailSede">Indirizzo email</label>
            <input type="text" id="emailSede" @bind="nuovaSede.EmailSede" />

            <label for="idReferente">ID Referente</label>
            <input type="text" id="idReferente" @bind="nuovaSede.IDReferente" />

            <button type="submit">Aggiungi Sede</button>
            <button type="button" @onclick="AnnullaAggiungiSede">Annulla</button>
        </form>
    }
    @if (sedi != null)
    {
        <table>
            <tr>
                <th>ID</th>
                <th>Sede</th>
                <th>Indirizzo</th>
                <th>Recapito telefonico</th>
                <th>Indirizzo e-mail</th>
                <th>ID Referente</th>
            </tr>
            @foreach (var sede in sedi)
            {
                <tr>
                    <td>@sede.Id</td>
                    <td>@sede.Descrizione</td>
                    <td>@sede.Indirizzo</td>
                    <td>@sede.RecapitoTel</td>
                    <td>@sede.EmailSede</td>
                    <td>@sede.IDReferente</td>
                </tr>
            }
        </table>
    }
    else
    {
        <p class="message">Nessuna sede è stata trovata.</p>
    }
</body>
</html>

@code {
    private List<Sede> sedi;
    private Sede nuovaSede = new Sede();
    private bool aggiungiSedeAttivo = false;

    protected override async Task OnInitializedAsync()
    {
        sedi = await HttpClient.GetFromJsonAsync<List<Sede>>("api/Sede");
    }

    private void AttivaAggiungiSede()
    {
        aggiungiSedeAttivo = true;
    }

    private void AnnullaAggiungiSede()
    {
        aggiungiSedeAttivo = false;
        nuovaSede = new Sede();
    }

    private async Task AggiungiSede()
    {
        HttpResponseMessage response = await HttpClient.PostAsJsonAsync("api/Sede", nuovaSede);

        if (response.IsSuccessStatusCode)
        {
            sedi = await HttpClient.GetFromJsonAsync<List<Sede>>("api/Sede");
            nuovaSede = new Sede();
            aggiungiSedeAttivo = false;
        }
        else
        {
            // Gestisci l'errore o visualizza un messaggio all'utente
        }
    }
}