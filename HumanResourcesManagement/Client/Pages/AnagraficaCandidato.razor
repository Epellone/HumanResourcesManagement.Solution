@using HumanResourcesManagementAPI.Models
@inject HttpClient HttpClient
@inject Microsoft.AspNetCore.Components.NavigationManager NavigationManager
@inject IJSRuntime JS
@page "/AnagraficaCandidato"

<h3>AnagraficaCandidato</h3>

<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">Aggiungi Candidato</button>
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Dati Candidato</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
              <div class="modal-body">
              <form @onsubmit="AggiungiCandidato">
                    <input type="text" @bind="nuovoCandidato.Nome" placeholder="Nome" /><br /><br />
                    <input type="text" @bind="nuovoCandidato.Cognome" placeholder="Cognome" /><br /><br />
                    <input type="text" @bind="nuovoCandidato.RecapitoTelefonico" placeholder="Recapito Telefonico" /><br /><br />
                    <input type="text" @bind="nuovoCandidato.CF" placeholder="Codice Fiscale" /><br /><br />
                    <input type="text" @bind="nuovoCandidato.Email" placeholder="Email" /><br /><br />
                    <input type="text" @bind="nuovoCandidato.Comune" placeholder="Comune" /><br /><br />
                    <input type="text" @bind="nuovoCandidato.Provincia" placeholder="Provincia" /><br /><br />
                    <input type="text" @bind="nuovoCandidato.DataDiNascita" placeholder="Data Di Nascita" />
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Chiudi</button>
                    <button type="submit" class="btn btn-primary" data-bs-dismiss="modal">Salva</button>
                </div>
            </form>
          </div>
        </div>
    </div>
</div>

